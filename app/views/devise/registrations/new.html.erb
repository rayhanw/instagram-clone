<div class="px-4 mb-4">
  <h2 class="text-2xl text-center my-4">Sign up</h2>

  <%= simple_form_for resource, url: registration_path(resource_name), html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4", data: { controller: "preview-image" } } do |f| %>
    <div>
      <%= f.input :avatar,
                  as: :file,
                  input_html: { accept: "image/*", class: "hidden" },
                  label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
                  wrapper_html: { class: "mb-4" },
                  error_html: { class: "text-red-500 text-xs italic" } %>

      <div class="flex flex-col items-center justify-center">
        <%= image_tag "avatar.png", alt: "avatar", class: "avatar-xl mb-4 object-cover", id: "preview-image", data: { target: "preview-image.image" } %>
        <input accept="image/*" capture="user" class="file optional" type="file" name="user[avatar]" id="user_avatar" data-action="change->preview-image#preview" />
      </div>
    </div>

    <%= f.input :email,
                input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
                label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
                wrapper_html: { class: "mb-4" },
                error_html: { class: "text-red-500 text-xs italic" },
                placeholder: "bob@example.com" %>

    <%= f.input :username,
                input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
                label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
                wrapper_html: { class: "mb-4" },
                error_html: { class: "text-red-500 text-xs italic" },
                placeholder: "bob347",
                hint: "Letters and numbers only!",
                hint_html: { class: "text-yellow-500 text-xs italic" },
                required: false %>

    <%= f.input :name,
                input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
                label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
                wrapper_html: { class: "mb-4" },
                error_html: { class: "text-red-500 text-xs italic" },
                placeholder: "Bob the Builder",
                required: false %>

    <%= f.input :website,
                input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
                label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
                wrapper_html: { class: "mb-4" },
                error_html: { class: "text-red-500 text-xs italic" },
                placeholder: "https://bob-website.com" %>

    <%= f.input :bio,
                input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
                label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
                wrapper_html: { class: "mb-4" },
                error_html: { class: "text-red-500 text-xs italic" },
                placeholder: "Hi there! I'm Bob the Builder" %>

    <%= f.input :password,
                input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
                label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
                wrapper_html: { class: "mb-4" },
                error_html: { class: "text-red-500 text-xs italic" },
                placeholder: "***********" %>

    <%= f.input :password_confirmation,
                input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
                label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
                wrapper_html: { class: "mb-12" },
                placeholder: "***********" %>

    <%= f.submit "Create account", class: "duration-200 shadow bg-purple-darker hover:bg-purple focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded w-full" %>

    <%= render "devise/shared/error_messages", resource: resource %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
