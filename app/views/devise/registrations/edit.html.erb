<%= simple_form_for resource, url: registration_path(resource), html: { multipart: true, class: "mx-4 mt-4 h-screen" } do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.input :email,
              disabled: true,
              input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
              label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
              wrapper_html: { class: "mb-4" },
              error_html: { class: "text-red-500 text-xs italic" },
              placeholder: "bob@example.com",
              required: false,
              label: "Email - Cannot change email :)" %>

  <%= f.input :name,
              input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
              label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
              wrapper_html: { class: "mb-4" },
              error_html: { class: "text-red-500 text-xs italic" },
              required: false %>

  <%= f.input :bio,
              as: :text,
              input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
              label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
              wrapper_html: { class: "mb-4" },
              error_html: { class: "text-red-500 text-xs italic" },
              required: false %>

  <%= f.input :website,
              input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
              label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
              wrapper_html: { class: "mb-4" },
              error_html: { class: "text-red-500 text-xs italic" },
              required: false %>

  <%= f.input :current_password,
              input_html: { class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" },
              label_html: { class: "block text-gray-700 text-sm font-bold mb-2" },
              wrapper_html: { class: "mb-4" },
              error_html: { class: "text-red-500 text-xs italic" },
              placeholder: "********",
              required: false %>

  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-full px-3">
      <div class="overflow-hidden relative w-64 my-4">
        <button type="button" class="bg-red-400 hover:bg-red-600 duration-300 text-white font-bold py-2 px-4 w-full inline-flex items-center">
          <svg fill="#FFF" height="18" viewBox="0 0 24 24" width="18" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 0h24v24H0z" fill="none"/>
            <path d="M9 16h6v-6h4l-7-7-7 7h4zm-4 2h14v2H5z"/>
          </svg>
          <span class="ml-2">Upload an avatar</span>
        </button>
        <input class="cursor-pointer file optional cursor-pointer absolute block opacity-0 top-0 h-full w-full" type="file" accept="image/*" capture="user" name="user[avatar]" id="user_avatar">
      </div>
    </div>
  </div>

  <div class="w-full">
    <button type="submit" class="duration-200 shadow bg-purple-darker hover:bg-purple focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">Save changes</button>
  </div>

  <%= link_to "Back", :back, class: "inline-block duration-200 shadow bg-purple-light hover:bg-purple-lighter focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 mt-12 rounded" %>
<% end %>

