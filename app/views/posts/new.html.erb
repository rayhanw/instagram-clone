<h1 class="text-center text-3xl">Create a new post</h1>

<%= simple_form_for @post, html: { class: "h-screen-bottom-nav", data: { controller: "preview-image" } } do |f| %>
  <div class="flex flex-wrap -mx-3 mb-6">
    <input multiple="multiple" accept="image/*" capture="environment" class="file optional" type="file" name="post[photos][]" id="post_photos" />
  </div>

  <button type="submit" class="bg-red-400 hover:bg-red-500 duration-300 text-white font-bold py-2 px-4 rounded">Upload post</button>
<% end %>
