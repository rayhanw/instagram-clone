<%= simple_form_for @direct_message do |f| %>
  <div class="flex items-center bg-white border-b-2 justify-between p-2 sticky top-0">
    <div class="flex items-center">
      <%= link_to direct_messages_path do %>
        <%= inline_svg_tag 'arrow.svg', class: "left-arrow" %>
      <% end %>

      <p class="ml-4">New Message</p>
    </div>

    <%= f.submit "Chat", class: "bg-transparent text-blue-400" %>
  </div>

  <div class="px-2">
    <label>To</label>
    <div class="inline-block relative w-full">
      <%= f.input :receiver_id, collection: @user_list,
                  required: false,
                  label: false,
                  input_html: { class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" },
                  wrapper_html: false %>

      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
        </svg>
      </div>
    </div>
  </div>
<% end %>
