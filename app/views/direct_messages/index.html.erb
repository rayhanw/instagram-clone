<div class="flex items-center bg-white border-b-2 justify-between p-2 sticky top-0">
  <div class="flex items-center">
    <%= link_to session[:back_link] do %>
      <%= inline_svg_tag 'arrow.svg', class: "left-arrow" %>
    <% end %>

    <p class="ml-4">Direct</p>
  </div>

  <%= link_to new_direct_message_path do %>
    <i class="material-icons">create</i>
  <% end %>
</div>

<div class="mx-4 mt-4">
  <h4 class="font-bold">Messages</h4>

  <% @presenter.direct_messages.each do |dm| %>
    <%= render partial: 'content', locals: { direct_message: dm, other_person: dm.other_person(current_user) } %>
  <% end %>
</div>
