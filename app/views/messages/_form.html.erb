<%= simple_form_for [direct_message, message], remote: true, html: { class: "border border-black px-2 rounded-full flex fixed bottom-0 left-0 w-full" } do |f| %>
  <%= f.input :content, label: false,
              input_html: { placeholder: "Message...", rows: 1, class: "bg-light-gray w-full py-3 rounded-sm" },
              wrapper_html: { class: "w-80 px-3 flex-grow" } %>

  <%= f.submit "Post", class: "text-blue-400 bg-transparent" %>
<% end %>
